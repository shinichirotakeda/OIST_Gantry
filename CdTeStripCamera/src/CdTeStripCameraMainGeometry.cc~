#include "PinholeCameraMainGeometry.hh"
#include "PinholeCameraMainGeometryRealWorld.hh"

using namespace anl;
using namespace anlgeant4;
using namespace pinholecamerageometry;

ANLStatus PinholeCameraMainGeometry::mod_startup() {
  
  register_parameter(&m_DetectorName, "Detector Name");
  set_parameter_description("Detector Name (PHCOrg, PHCMrk1, PHCMrk2 ......) ");
  return AS_OK;
}

G4VUserDetectorConstruction* PinholeCameraMainGeometry::create() {
  G4VUserDetectorConstruction* theGeometry = new PinholeCameraMainGeometryRealWorld(m_DetectorName);
  return theGeometry;
}
