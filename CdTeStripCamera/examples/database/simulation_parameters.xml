<?xml version="1.0" ?>
<?xml-stylesheet type="text/xsl" href="http://www.astro.isas.jaxa.jp/~odaka/xmlstyle/simulation_param_v4.xsl" ?>

<simulation>
  <name>CC</name>
  <comment>H. Odaka | 2013-04-22</comment>
  
  <sd_check />

  <sensitive_detectors>
    <sensitive_detector>
      <name>SiDetector_log</name>
      <type>2DStrip</type>
      <id_method>path</id_method>
      <layer_offset>1</layer_offset>
      <simulation_param_common>
        <upside_anode set="0" />
        <upside_xstrip set="1" />
        <sim_pha mode="0" />
        <sim_diffusion mode="0"/>
      </simulation_param_common>
      <detector_list>
        <detector id="100" path="SiDetector"><simulation_param></simulation_param></detector>
      </detector_list>
    </sensitive_detector>

    <sensitive_detector>
      <name>CdTeDetector_log</name>
      <type>2DStrip</type>
      <id_method>path</id_method>
      <layer_offset>1</layer_offset>
      <simulation_param_common>
        <upside_anode set="0" />
        <upside_xstrip set="1" />
        <sim_pha mode="0"/>
        <sim_diffusion mode="0"/>
      </simulation_param_common>
      <detector_list>
        <detector id="200" path="CdTeDetector"><simulation_param></simulation_param></detector>
      </detector_list>
    </sensitive_detector>

  </sensitive_detectors>
</simulation>
